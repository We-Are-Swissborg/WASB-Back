{
  "name": "weareswissborg",
  "version": "1.0.0",
  "description": "The association that supports you in your crypto adventure",
  "main": "app.js",
  "scripts": {
    "build": "npx tsc",
    "dev": "npx dotenvx run --env-file=.env --env-file=.env.local --overload --verbose -- nodemon src/app.ts",
    "start": "tsc && npx dotenvx run --env-file=.env --env-file=.env.production --overload -- pm2 start ecosystem.config.js",
    "test": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint -c eslint.config.mjs ./src",
    "lintfix": "eslint -c eslint.config.mjs --fix ./src"
  },
  "author": "Valdior",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.8",
    "@types/validator": "^13.11.9",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.0.0",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.14",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.7",
    "typescript-eslint": "^7.10.0",
    "winston": "^3.13.0"
  }
}
