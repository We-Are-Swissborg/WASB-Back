{
    "compilerOptions": {
      "allowJs": false,
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "dist",
      "rootDir": ".",
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "target": "es6",
      "types": ["node"],
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
}
